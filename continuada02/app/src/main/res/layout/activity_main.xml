<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cachorro 1!"
        android:textSize="30sp"
        android:id="@+id/et_cachorro1"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cachorro 2!"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/et_cachorro1"
        android:id="@+id/et_cachorro2"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar cachorro"
        app:layout_constraintTop_toBottomOf="@+id/et_cachorro2"
        android:layout_marginTop="30dp"
        android:id="@+id/bt_comprar"
        android:onClick="comprar"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/bt_comprar"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_foto_cachorro1"
        android:src="@drawable/cachorro1"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_comprar"
        app:layout_constraintLeft_toRightOf="@+id/iv_foto_cachorro1"
        android:layout_marginTop="20dp"
        android:id="@+id/iv_foto_cachorro2"
        android:src="@drawable/cachorro2"
        />





</androidx.constraintlayout.widget.ConstraintLayout>